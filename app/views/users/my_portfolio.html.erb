<h1>My portfolio</h1>
<h3>Search for stocks</h3>
<div id="stock-lookup">
  <%= form_tag search_stocks_path, remote: true, method: :get, id: "stock-lookup-form", class:"form-inline" do %>
  <div class="form-group">
    <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control search-box input-lg" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= button_tag(type: :submit, class: "btn btn-lg btn-success mb-2") do %>
    <i class="glyphicon glyphicon-search"></i>
    Look up a stock
    <%- end %>
    </div>
  <% end %>
</div>
<div id="results">
  <%= render 'users/result' %>
</div>
<%= render 'stocks/list' %>
