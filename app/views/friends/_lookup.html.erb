<div id="friend-lookup">
  <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form", class:"form-inline" do %>
  <div class="form-group">
    <%= text_field_tag :search_param, params[:search_param], placeholder: "Enter name or email..", autofocus: true, class: "form-control search-box input-lg" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= button_tag(type: :submit, class: "btn btn-lg btn-success mb-2") do %>
    <i class="glyphicon glyphicon-search"></i>
    Search
    <%- end %>
    </div>
  <% end %>
</div>
<div id="results">
  <%= render 'friends/result' %>
</div>
